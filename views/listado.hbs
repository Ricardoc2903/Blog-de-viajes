<section class="formContainer">
    <header class="admin-header crud-form">
        <div class="btn">
            <span>{{user}}</span>
            <a href="/login/logout"><input type="button" value="Logout"></a>
            <a href="/admin"><button>Agregar</button></a>
        </div>
    </header>

    <table class="styled-table">
        <thead>
            {{!-- <tr>
                <th colspan="3">
                    <a href="/addItem"><button>Agregar</button></a>
                </th>
            </tr> --}}
            <tr>
                <th scope="col">id</th>
                <th scope="col">Pais</th>
                <th scope="col">Imagen</th>
                <th class="text-center" scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each paises}}
            <tr>
                <td>{{id}}</td>
                <td>{{pais}}</td>
                <td><img src="{{imagen}}" alt="{{pais}}"></td>

                <td>
                    <a href="/listado/borrar/{{id}}"><input type="button" class="btn btn-danger btn-sm" value="eliminar"></a>
                    
                    <a href="/listado/modificar/{{id}}"><input type="button" class="btn btn-danger btn-sm" value="modificar"></a>

                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>