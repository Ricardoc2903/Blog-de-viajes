<section class="formContainer">
    <header class="admin-header crud-form">
        <div class="btn">
            <span> {{user}} </span>
            <a href="/login/logout"> <input type="button" value="logout"></a>
            <a href="/listado"><input type="button" value="listado"></a>
        </div>
    </header>
    {{#each pais}}
    <form class="form crud-form" action="/listado/modificar" method="POST">
        <input type="text" name="id" value="{{id}}" hidden>
        <input type="text" name="pais" value="{{pais}}" placeholder="Pais..." autofocus required>
        <textarea name="ciudad" rows="5" placeholder="Ciudad..." required>{{ciudad}}</textarea>
        <textarea name="localizacion" rows="10" placeholder="Localizacion" required>{{localizacion}}</textarea>
 
        {{!-- accept restringe el tipo de archivos que muestra el explorador de archivos --}}
        
        <div class="btn">
            <input type="submit">
        </div>
    </form>
    {{/each}}
</section>